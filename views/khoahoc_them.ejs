<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
	<link href='http://localhost:3000/css/quanly.css' rel='stylesheet' type='text/css'>
	<link href='http://localhost:3000/css/nav.css' rel='stylesheet' type='text/css'>
	<title><%= title %></title>
</head>

<body>
	<div>
		<!-- Navbar -->
		<%- include('includes/navbar'); %>
		
		<!-- Card: Header and Footer -->
		<div class="card col-8">
			<div class="card-header"><%= title %></div>
			<div class="card-body">
				<% if(typeof errors != 'undefined') { %>
					<div class="alert alert-danger alert-dismissible fade show" role="alert">
						<ul class="mb-0">
							<% errors.forEach(function(err){ %>
								<li><%= err.msg %></li>	
							<% }); %>
						</ul>
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				<% } %>
				<form action="/khoahoc/them" method="post" class="needs-validation row" novalidate>
					<div class="mb-3 col-3">
						<label for="id_chuyennganh" class="form-label">Specialized:</label>
						<select class="form-select" id="id_chuyennganh" name="id_chuyennganh" required>
							<option style="text-align: center;">-- Choose --</option>
							<% chuyennganh.forEach(function(cn) { %>
								<option value="<%= cn.id_chuyennganh %>"><%= cn.tenchuyennganh %></option>
							<% }); %>
						</select>
					</div>
					<div class="mb-3 col-5">
						<label for="tenkhoahoc" class="form-label">Course name:</label>
						<input type="text" class="form-control" id="tenkhoahoc" name="tenkhoahoc" value="" required>
					</div>

					<div class="col-2">
						<label for="hocphi" class="form-label">Tuition fee:</label>
						<div class="input-group mb-3">
							<input type="text" class="form-control" id="hocphi" name="hocphi">
							<span class="input-group-text"><b>$</b></span>
						</div>
					</div>
					
					<div class="mb-3 col-2">
						<label for="soluongtoida" class="form-label">Quantity(max):</label>
						<input type="number" class="form-control" id="soluongtoida" name="soluongtoida" value="" required>
					</div>
					<div class="mb-3">
						<label for="mota" class="form-label">Course description:</label>
						<textarea class="form-control ckeditor" id="mota" name="mota" required></textarea>
					</div>
					
					<button type="submit" class="btn btn-primary">Create</button>
				</form>
			</div>
		</div>
		
		<!-- Footer -->
		<%- include('includes/footer'); %>
	</div>
	
	<%- include('includes/javascript'); %>
</body>

</html>