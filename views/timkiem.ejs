<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
	

	<link href='http://localhost:3000/css/login.css' rel='stylesheet' type='text/css'>
	<link href='http://localhost:3000/css/nav.css' rel='stylesheet' type='text/css'>
	<link href='http://localhost:3000/css/index.css' rel='stylesheet' type='text/css'>
</head>

<body>
		<!-- Navbar -->
		<%- include('includes/navbar'); %>
		
		<!-- Card: Header and Footer -->

	<div style="background-color: whitesmoke; padding-top: 30px;" data-aos="fade-up" data-aos-duration="500">
		<h5 style="text-align: left;" class="m-lg-2" id="ourcourses">Search: <i style="color: rgb(240, 96, 96);"><%= title %></i></h5>
		<h1 style="text-align: center;" class="mb-5" id="ourcourses"><%= topic %> <%= title %> </h1>
		
		<div class="col-md-8 container">
		  	<div class="row" >
			<% khoahoc.forEach(function(kh){%>
				<div class=" m-lg-3 col-md-6" id="card" style="width: 18rem;" data-aos="zoom-in"
				data-aos-duration="500">
					<div class="row g-0 overflow-hidden flex-md-row position-relative">
							<div class="d-flex flex-column position-static">
								<div style="overflow: hidden"><img class="card-img-top" src="<%- firstImage(kh.mota) %>" width="auto" height="180"></div>
								<div class="card-body">
									<div class="row">
										<strong class="d-inline-block mb-2 text-primary col-8"><%= kh.tenchuyennganh %></strong>
										<h5 class="card-text mb-auto col-4" style="color: rgb(141, 138, 138);">
											<%= kh.hocphi %> <b style="color: rgb(45, 156, 82);">$</b>
										</h5>
									</div>
									<div class="mb-1 text-muted" style="font-size: 10pt;"><%= new Date(kh.ngaytao.toISOString()).toLocaleString("vi-VN") %></div>
									<p class="mb-0" id="tieude"><%= kh.tenkhoahoc %></p>
									<a class="btn btn-primary mt-3" style="width: 150px; margin: auto;" id="signin" href="/khoahoc/chitiet/<%= kh.id_khoahoc %>">Join</a>
							
								</div>
							</div>
						<div class="col-auto d-none d-lg-block">
					</div>
				</div>
				
			</div>
			<% }); %>
		  	
		</div>
	</div>
		
		<!-- Footer -->
		<%- include('includes/footer'); %>
	</div>
	
	<%- include('includes/javascript'); %>
</body>

</html>



