<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
	<link href='http://localhost:3000/css/quanly.css' rel='stylesheet' type='text/css'>
	<link href='http://localhost:3000/css/nav.css' rel='stylesheet' type='text/css'>
	<title><%= title %></title>
</head>

<body>
	<div >
		<!-- Navbar -->
		<%- include('includes/navbar'); %>
		<!-- Card: Header and Footer -->
		<div class="card col-11" data-aos="zoom-in-right" data-aos-duration="500">
			<div class="card-header"><%= title %></div>
			<div class="card-body table-responsive">
				
				<a href="/taikhoan/them" class="btn btn-primary mb-2"><i class="bi bi-plus-lg"></i> Thêm mới</a>
				<a href="/taikhoan" class="btn btn-lg mb-2 btn-danger"> Tất cả</a>
				<a href="/taikhoan/giangvien" class="btn btn-lg mb-2 btn-success"> Giảng viên</a>
				<a href="/taikhoan/hocvien" class="btn btn-lg mb-2 btn-success"> Học viên</a>
				<table class="table table-bordered table-hover table-sm mb-0">
					<thead>
						
						<tr class="text-center">
							<th width="3%">#</th>
							<th width="15%">Họ và tên</th>
							<th width="15%">Email</th>
							<th width="10%">Số điện thoại</th>
							<th width="10%">Tên đăng nhập</th>
							<th width="5%">Quyền hạn</th>
							<th width="5%">Trạng thái</th>
							<th width="5%">Sửa</th>
							<th width="5%">Xóa</th>
						</tr>
					</thead>
					<tbody>
						<% var stt = 1; %>
						<% taikhoan.forEach(function(tk){ %>
							<tr>
								<td><%= stt++ %></td>
								<td><%= tk.hovaten %></td>
								<td><%= tk.email %></td>
								<td><%= tk.sdt %></td>
								<!--td class="text-center"><img src="./uploads/<%= tk.hinhanh %>" width="100px" height="100px"></td-->
								<td><%= tk.tendangnhap %></td>
								<td><%= tk.quyenhan %></td>
								<td class="text-center">
									<% if(tk.kichhoat == 1) { %>
										<a href="/taikhoan/duyet/<%= tk.id_taikhoan %>"><i class="bi bi-check-circle text-success"></i></a>
									<% } else { %>
										<a href="/taikhoan/duyet/<%= tk.id_taikhoan %>"><i class="bi bi-x-square text-danger"></i></a>
									<% } %>
								</td>
								<td class="text-center"><a href="/taikhoan/sua/<%= tk.id_taikhoan %>"><i class="bi bi-pencil-square text-primary"></i></a></td>
								<td class="text-center"><a href="/taikhoan/xoa/<%= tk.id_taikhoan %>" onclick="return confirm('Bạn có muốn xóa tài khoản <%= tk.hovaten %> không?');"><i class="bi bi-trash text-danger"></i></a></td>
							</tr>
						<% }); %>
					</tbody>
				</table>
			</div>
		</div>
		<!-- Footer -->
		<%- include('includes/footer'); %>
	</div>
	
	<%- include('includes/javascript'); %>
</body>

</html>